@using FarmersDiary.Core.Models;
@model FarmerViewModel

<div class="profil-container">


    <div class="card">
        <div class="card-body">

            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
            <div class="mt-3">
                <h4>@Model.Name  @Model.Surname</h4>
                
                <div class="profile-buttons">
                    <a class="btn btn-info beige" asp-area="Farmer" asp-controller="Farm" asp-action="AddFarm">Add Farm</a>
                    <a class="btn btn-info beige" asp-area="Farmer" asp-controller="Profile" asp-action="DeleteProfile">Delete Profile</a>
                </div>
            </div>

        </div>
    </div>



    <div class="card">

        <div class="rowx">
            <div class="col-sm-3">
                <h6 class="mb-0">Name</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                @Model.Name
            </div>
            <div class="col-sm-3">
                <h6 class="mb-0">Surname</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                @Model.Surname
            </div>
        </div>
        <hr>
        <div class="rowx">
            <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                @Model.Email
            </div>
        </div>
        <hr>
        <div class="rowx">
            <div class="col-sm-3">
                <h6 class="mb-0">Address</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                @Model.Address
            </div>
        </div>
        <hr>
        <div class="rowx">
            <div class="col-sm-12">
                <a class="btn btn-info beige" asp-area="Farmer" asp-controller="Profile" asp-action="EditProfile">Edit</a>
            </div>
        </div>


    </div>

</div>

