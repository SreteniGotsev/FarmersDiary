@using FarmersDiary.Core.Models;
@model List<ParcelShortViewModel>

@{
    Layout = "../Shared/_Layout.cshtml";
}

<table class="farms-list" style="text-align:center">
    <thead>
        <tr class="table100-head">
            <th class="column1">Number</th>
            <th class="column2">Area</th>
            <th class="column3">Description</th>
            <th class="column4">Location</th>
            <th class="column5">Details</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="column1"> @item.Number</td>
                <td class="column2"> @item.Area</td>
                <td>
                    <a asp-area="Client" asp-controller="Land"
                   asp-action="Parcel"
                   asp-route-id=@item.Id>Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>