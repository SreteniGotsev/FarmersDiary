@using FarmersDiary.Core.Models;
@{
    Layout = "../Shared/_Layout.cshtml";
}
@model VehicleViewModel;
<section class="board">
    <article>
        <form method="post">
            <label for="RegistationPlate">RegistationPlate</label>
            <input type="text" id="RegistationPlate" name="RegistationPlate" />
            <span asp-validation-for="@Model.RegistationPlate" class="text-danger"></span>
            <label for="VehicleCategory">VehicleCategory</label>
            <select id="VehicleCategory" name="VehicleCategory">
               <option value="Truck">Truck</option>
                <option value="Tractor">Tractor</option> 
                <option value="Combine">Combine</option> 
                <option value="Trailer">Trailer</option>
                <option value="Forklift">Forklift</option>
            </select>
            <span asp-validation-for="@Model.VehicleCategory" class="text-danger"></span>
            <label for="Make">Make</label>
            <input type="text" id="Make" name="Make" />
            <span asp-validation-for="@Model.Make" class="text-danger"></span>
            <label for="Model">Model</label>
            <input type="text" id="Model" name="Model" />
            <span asp-validation-for="@Model.Model" class="text-danger"></span>
            <input type="submit"/>
        </form>
    </article>
</section>