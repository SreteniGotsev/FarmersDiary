@{
    Layout = "../Shared/_Layout.cshtml";
}
@using FarmersDiary.Core.Models;
@model FarmViewModel;

<section class="board">
    <article>
        <form method="post">
            <label for="farmName">Name</label>
            <input type="text" id="farmName" name="Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <label for="farmDescription">Desctiption</label>
            <input type="text" id="farmDescription" name="Description" />
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
            <label for="farmAnimalCategory">AnimalCategory</label>
            <input type="text" id="farmAnimalCategory" name="AnimalCategory" />
            <span asp-validation-for="@Model.AnimalCategory" class="text-danger"></span>
            <label for="farmProductiveCategory">ProductiveCategory</label>
            <input type="text" id="farmProductiveCategory" name="ProductiveCategory" />
            <span asp-validation-for="@Model.ProductiveCategory" class="text-danger"></span>
            <label for="farmNumberOfAnimals">NumberOfAnimals</label>
            <input type = "text" id="farmNumberOfAnimals" name="NumberOfAnimals">
            <span asp-validation-for="@Model.NumberOfAnimals" class="text-danger"></span>
            <input type="submit" />

        </form>
    </article>
</section>
